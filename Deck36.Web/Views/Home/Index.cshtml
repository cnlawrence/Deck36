@model Deck36.Web.Models.Officer
@{
    ViewBag.Title = "Home Page";
}

<div class="page-header">
    <h1>Deck36 Helpers <small>ASP.NET MVC Razor Helpers</small></h1>
</div>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            Helpers
        </div>

        <div class="panel-body">
            <form class="form-horizontal">
                <div class="col-md-12">
                    <div class="form-group">
                        <h4>BootstrapLabelFor</h4>
                        @Html.BootstrapLabelFor(m => m.FirstName)
                        @Html.EditorFor(m => m.FirstName)
                    </div>
                    <div class="form-group">
                        <h4>BootstrapSubmitButton</h4>
                        @Html.BootstrapSubmitButton("Submit!")
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>